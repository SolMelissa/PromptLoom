<UserControl x:Class="PromptLoom.Controls.ZoomPanImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Root Grid handles mouse input so we can detect background clicks (outside the displayed bitmap). -->
    <Grid Background="Transparent">
        <Border ClipToBounds="True">
            <Image x:Name="PART_Image"
                   Source="{Binding Source, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stretch="Uniform"
                   IsHitTestVisible="False"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="PART_Scale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="PART_Translate" X="0" Y="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Border>

        <!-- Left/Right navigation edges (clickable) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Navigation hit zones: intentionally wide for easy clicking -->
                <ColumnDefinition Width="112"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="112"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Background="#01000000"
                    BorderThickness="0"
                    Command="{Binding ClickLeftCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    ToolTip="Previous (Left Arrow)">
                <TextBlock Text="&lt;" Foreground="#FFFFFF" FontSize="26" FontWeight="SemiBold" Opacity="0.65"/>
            </Button>

            <Button Grid.Column="2"
                    Background="#01000000"
                    BorderThickness="0"
                    Command="{Binding ClickRightCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    ToolTip="Next (Right Arrow)">
                <TextBlock Text="&gt;" Foreground="#FFFFFF" FontSize="26" FontWeight="SemiBold" Opacity="0.65"/>
            </Button>
        </Grid>

        <!-- Small hint so users discover the interaction quickly -->
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12" Padding="8,6"
                Background="#AA000000" CornerRadius="10" IsHitTestVisible="False">
            <TextBlock Foreground="#FFF" FontSize="12" Opacity="0.9"
                       Text="Mouse wheel: zoom • Drag: pan • Double click: reset • Arrows: prev/next • Up/Down: zoom"/>
        </Border>
    </Grid>
</UserControl>
