                                <TextBlock Text="Related tags" Opacity="0.7" Margin="0,0,0,6"/>
                                <Border Background="{StaticResource PanelBg}"
                                        BorderBrush="{StaticResource BorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="8">
                                    <Grid>
